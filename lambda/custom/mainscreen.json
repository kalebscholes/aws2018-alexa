{
  "type": "APL",
  "version": "1.0",
  "import": [
    {
      "name": "alexa-viewport-profiles",
      "version": "1.0.0"
    }
  ],
  "mainTemplate": {
    "parameters": ["datasource"],
    "item": [
      {
        "type": "Container",
        "direction": "row",
        "width": "100vw",
        "height": "100vh",
        "alignItems": "center",
        "justifyContent": "center",
        "items": [
          {
            "type": "Image",
            "source": "https://www.google.com/url?sa=i&source=images&cd=&cad=rja&uact=8&ved=2ahUKEwj-oLu6lfPeAhWE3VMKHU46DM4QjRx6BAgBEAU&url=https%3A%2F%2Faifs.gov.au%2Fcfca%2Fpublications%2Ffamily-structure-and-child-maltreatment-do-some-family-types-place-children&psig=AOvVaw327gSQeNPhPjWMZF0UdW2p&ust=1543359361695313",
            "position": "absolute",
            "width": "100vw",
            "height": "100vh",
            "scale": "best-fill"
          },
          {
            "type": "Text",
            "text": "${datasource.choreData.properties.title}",
            "color": "#000000",
            "width": "70vw",
            "fontSize": "7vw",
            "textAlign": "center"
          },
          {
            "type": "Text",
            "text": "${datasource.choreData.properties.subtitle}",
            "color": "#000000",
            "width": "70vw",
            "bottom": "20px",
            "position": "absolute",
            "fontSize": "4vw",
            "textAlign": "center"
          }
        ]
      }
    ]
  }
}
