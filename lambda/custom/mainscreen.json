{
  "type": "APL",
  "version": "1.0",
  "import": [
    {
      "name": "alexa-viewport-profiles",
      "version": "1.0.0"
    }
  ],
  "mainTemplate": {
    "parameters": ["datasource"],
    "item": [
      {
        "type": "Container",
        "direction": "row",
        "width": "100vw",
        "height": "100vh",
        "alignItems": "center",
        "justifyContent": "center",
        "items": [
          {
            "type": "Image",
            "source": "https://aifs.gov.au/cfca/sites/default/files/styles/publication_main/public/CFCA10.jpg?itok=uPdYZ00-",
            "position": "absolute",
            "width": "100vw",
            "height": "100vh",
            "scale": "best-fill"
          },
          {
            "type": "Text",
            "text": "${datasource.choreData.properties.title}",
            "color": "#ffffff",
            "width": "70vw",
            "fontSize": "7vw",
            "textAlign": "center"
          },
          {
            "type": "Text",
            "text": "${datasource.choreData.properties.subtitle}",
            "color": "#ffffff",
            "width": "70vw",
            "bottom": "20px",
            "position": "absolute",
            "fontSize": "4vw",
            "textAlign": "center"
          }
        ]
      }
    ]
  }
}
