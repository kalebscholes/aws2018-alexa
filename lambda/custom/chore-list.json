{
  "type": "APL",
  "version": "1.0",
  "import": [
    {
      "name": "alexa-viewport-profiles",
      "version": "1.0.0"
    }
  ],
  "mainTemplate": {
    "parameters": ["datasource"],
    "item": [
      {
        "type": "Container",
        "direction": "row",
        "width": "100vw",
        "height": "100vh",
        "alignItems": "center",
        "justifyContent": "center",
        "items": [
          {
            "type": "Image",
            "source": "http://www.davidwelch.com/xSites/Agents/orlandohomes/Content/UploadedFiles/headshot-800.jpg",
            "position": "absolute",
            "width": "200px",
            "height": "auto",
            "top": "10",
            "right": 10
          },
          {
            "type": "Text",
            "text": "${datasource.davidChores.properties.firstChore}",
            "color": "#ffffff",
            "width": "70vw",
            "paddingTop": "20px",
            "fontSize": "4vw",
            "textAlign": "center"
          },
          {
            "type": "Text",
            "text": "${datasource.davidChores.properties.secondChore}",
            "color": "#ffffff",
            "width": "70vw",
            "paddingTop": "20px",
            "fontSize": "4vw",
            "textAlign": "center"
          }
        ]
      }
    ]
  }
}
